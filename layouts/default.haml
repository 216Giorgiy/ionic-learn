!!! 5
%html{lang: "en"}
  %head
    =render "meta_tags"
    %title=[@item[:titles], "Learn Ionic"].flatten.compact.join(' | ')
    %link{rel: "stylesheet", href: @items['/css/site/'].path}
    %link{rel: "stylesheet", href: "//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.0/animate.min.css"}

  %body.full-page.no-js{class: @item[:body_css]}
    :javascript
      document.body.classList.remove('no-js');

    .container
      .row
        .side-nav=render "navigation"
        .main-pane~yield
      %footer.main
        %span.attribution &copy; 2014 Drifty Co.
        %span.expand-wrapper
          %span.expand
        %nav#nav
          %a{target: '_blank', href: "#"} Privacy
          %a{target: '_blank', href: "#"} Terms
          %a{target: '_blank', href: "mailto:hi@ionicframework.com"} Contact us
          %a{target: '_blank', href: "https://github.com/driftyco/ionic-learn/issues/new"} Suggestions
          %a{target: '_blank', href: "http://ionicons.com/"} Ionicons
          %a{target: '_blank', href: "http://ionicframework.com/jobs/"} Jobs
          %a{target: '_blank', href: "http://forum.ionicframework.com/"} Forum
          %a{target: '_blank', href: "http://ionicframework.com/blog/"} Blog
          %a{target: '_blank', href: "http://drifty.com"} Drifty Co
    .get-ionic-wrapper.viewed
      %a.get-ionic{href: "http://www.ionicframework.com", target: "_new"} Get building with Ionic today!
      %a.close-cta.ion-ios7-close-empty{href: "#"}

    =render "base_scripts"
    %script{src: '/js/main.js'}
